<% if user_signed_in? %>
  <%= simple_form_for(current_user, url: user_registration_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :name, required: true, autofocus: true%>
    <%= f.input :surname, required: true, autofocus: true%>
    <%= f.input :bio, required: true, autofocus: true%>
    <%= f.input :password, hint: "leave it blank if you don't want to change it", required: false, input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password" } %>
    <%= f.input :address %>
    <p>Upload a new profile picture</p>
    <%= f.file_field :avatar %>
    <br>
    <p>Upload a new cover picture</p>
    <%= f.file_field :image %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
<% end %>